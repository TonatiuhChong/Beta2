<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ReconFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FS2TotalSHab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensores totales registrados" />

        <TextView
            android:id="@+id/FS2TotalSens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Habitaciones" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>

    <TextView
        android:id="@+id/FS2Hab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/FSkeysFirebase"
            android:layout_width="152dp"
            android:layout_height="wrap_content">

        </ListView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/FSValuesFirebase"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />




    </LinearLayout>

</LinearLayout>